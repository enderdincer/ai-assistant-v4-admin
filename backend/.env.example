# =============================================================================
# AI Assistant v4 Admin Dashboard - Backend Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# HTTP server port for REST API endpoints
PORT=3001

# Environment mode (development, production)
NODE_ENV=development

# -----------------------------------------------------------------------------
# MQTT Configuration
# -----------------------------------------------------------------------------
# MQTT broker connection URL
# Format: mqtt://[username:password@]host[:port]
MQTT_BROKER_URL=mqtt://localhost:1883

# Unique client ID for MQTT connection (must be unique per instance)
MQTT_CLIENT_ID=admin-dashboard-backend

# Time in milliseconds to wait before reconnecting to MQTT broker
MQTT_RECONNECT_PERIOD=1000

# Maximum time in milliseconds to wait for MQTT connection
MQTT_CONNECT_TIMEOUT=30000

# -----------------------------------------------------------------------------
# WebSocket Configuration
# -----------------------------------------------------------------------------
# WebSocket server port for real-time frontend updates
WS_PORT=3002

# Interval in milliseconds to send heartbeat messages to clients
WS_HEARTBEAT_INTERVAL=30000

# -----------------------------------------------------------------------------
# Service Health Monitoring
# -----------------------------------------------------------------------------
# Time in milliseconds after which a service is marked as unhealthy
# if no health message is received. This is the main "timeout" setting.
# Default: 60000 (60 seconds)
SERVICE_TIMEOUT_MS=60000

# Interval in milliseconds to check for service timeouts
# Lower values = faster detection but more CPU usage
# Default: 5000 (5 seconds)
HEALTH_CHECK_INTERVAL_MS=5000
